<p id="notice"><%= notice %></p>

<div id="showimg">
<%=image_tag @post.image.url(:large) %>
</div>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p class="date">
  Submitted <%= time_ago_in_words(@post.created_at) %> Ago
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
